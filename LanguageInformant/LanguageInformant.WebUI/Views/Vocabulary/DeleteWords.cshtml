@model LanguageInformant.Domain.Entities.Vocabulary


@{
    ViewBag.Title = "Delete Words";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.VocabularyID)
    <table id="Editor">
        <tr>
            <th align="center">
                <h2>Deleting Words for @Model.Name</h2>
            </th>
        </tr>
        <tr>

            <td align="center">
                <h4>Words assigned to @Model.Name</h4>
                @Html.ListBox("VocabularyWords")
            </td>
        </tr>
        <tr>
            <td align="center">
                <input type="submit" name="delete" id="delete" value="Delete" />
            </td>
            <td align="center">
                @Html.ActionLink("Assign Words", "AssignWords", new { Model.VocabularyID })
                @*<input type="submit" name="remove" id="remove" value="<<" />*@
            </td>
        </tr>
    </table>

}