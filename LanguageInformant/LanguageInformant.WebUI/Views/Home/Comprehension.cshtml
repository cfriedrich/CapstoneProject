@model LanguageInformant.WebUI.Models.VocabQuiz

@{
    ViewBag.Title = "Comprehension Lesson";
    
}

<div id="wrapper" style="width:100%; padding:10px;">
    <div id="container1" style="border:double medium; width:95%; height:400px; float:left; margin-left:5px; padding:5px;">
        <h1> @Model.Name </h1>
    <br />      
    
@Html.Hidden("Id", @Model.Id)
    
  @using (Html.BeginForm())
  {  
    
    foreach (var question in Model.Questions)
       { 
         @Html.Partial("_question", question);            
       }
    <div style="margin-top:20px; margin-left:50px; float:left; ">
    <input type="submit" value="Submit your quiz" />
    </div>
  } 

    </div>   
</div>
