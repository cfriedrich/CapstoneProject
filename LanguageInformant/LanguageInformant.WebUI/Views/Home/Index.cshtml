
@{
    ViewBag.Title = "The Language Informant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="wrapper" style="width:100%;">
<h1 style="margin-top:5px; margin-bottom:2px;">Welcome to the Language Informant</h1>
<h2 style="margin-top:0px; margin-bottom:0px;">An exciting way to learn a new language</h2>
<p style="margin-top:2px; margin-bottom:2px;">Curious about learning a new language. <br />
    Enjoy!
</p>
<div id="content" style="width:100%;">
<div id="panelRow1" style="width:375px; margin-left:110px;">
    <div class="hover panel" style="float:left;">
        <div class="front" style="font-weight: bold; border-radius:8px 8px; border: ridge thick ButtonShadow; background-color:crimson;">
            <div class="pad">
                <img src="~/Content/Images/About.png" width="150px" height="125px" />
            </div>
        </div>
        <div class="back" style="border:inset thick crimson; border-radius:8px 8px; background-color:crimson;">
            <div class="pad">
                <div class="padback">
                @Html.ActionLink("About Us", "About", "Home")
                <br />
                @Html.ActionLink("Admin Portal", "Index", "Admin")
                </div>
            </div>
        </div>
    </div>
    
    <div class="hover panel" style="float:left; margin-left:20px;">
        <div class="front" style="font-weight: bold; border-radius:8px 8px; border: ridge thick ButtonShadow; background-color:crimson;">
            <div class="pad">
                <img src="~/Content/Images/Dictionary.png" width="150px" height="125px" />
            </div>
        </div>
        <div class="back" style="border:inset thick crimson#dc143c; border-radius:8px 8px; background-color:crimson;">
            <div class="pad">
                <div class="padback">
                @Html.ActionLink("Dictionary Link", "Dictionary", "Home")
                </div>
            </div>
        </div>
    </div>
</div>
<div id="panelRow2" style="width:375px; margin-left: 110px; " >
    <div class="hover panel" style="float:left; margin-top:15px;">
        <div class="front" style="font-weight: bold; border-radius:8px 8px; border: ridge thick ButtonShadow; background-color:#dc143c;">
            <div class="pad">
                <img src="~/Content/Images/Lessons.png" width="150px" height="125px"/>
            </div>
        </div>
        <div class="back" style="border:inset thick crimson; border-radius:8px 8px; background-color:crimson;">
            <div class="pad">
                <div class="padback">
                @Html.ActionLink("Course Page", "Course", "Home")
                </div>
            </div>
        </div>
    </div>
    <div class="hover panel" style="float:left; margin-left:20px; margin-top:15px;">
        <div class="front" style="font-weight: bold; border-radius:8px 8px; border: ridge thick ButtonShadow; background-color:crimson;">
            <div class="pad">
                <img src="~/Content/Images/Contact.png" width="150px" height="125px" />

            </div>
        </div>
        <div class="back" style="border:inset thick crimson; border-radius:8px 8px; background-color:crimson;">
            <div class="pad">
                <div class="padback">
                @Html.ActionLink("Send us some feedback", "Contact", "Home")
                </div>
            </div>
        </div>
    </div>
</div>
   
</div>
<div id="imageBox" style="width:150px; height:300px; margin-left:500px; ">
    <img src="~/Content/Images/wordle.png" height="230" width="230"/>
    </div>
</div>
