@model LanguageInformant.WebUI.Models.VocabAnswers

@if (Model.IsSelected && Model.IsAnswer)
{  
    <div style="margin:0px; background-color:lightgreen">
    @Html.RadioButton("Questions[" + Model.Question.OrderNumber +"].Choices[0].Id",Model.Id)
    @Model.Text
    </div>
} 
else 
{  
    @Html.RadioButton("Questions[" + Model.Question.OrderNumber +"].Choices[0].Id",Model.Id)
    @Model.Text
    <br />
}
   