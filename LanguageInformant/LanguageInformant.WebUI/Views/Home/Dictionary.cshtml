@model LanguageInformant.Domain.Entities.Word
@using Microsoft.AspNet.Identity
@using LanguageInformant.Domain.Entities

@{
    ViewBag.Title = "Dictionary";
    
}
<h2 style="margin-left:15px;">@ViewBag.Title</h2>
<div id="wrapper" style="width:100%;">
    <div id="container1" style="border:double medium; width:240px; height:393px; float:left; margin-left:8px; padding-left:10px; padding-right:10px;">
        <p style="font-size:medium;">
            This is a place for the curious to come and find the meaning of words along with some other
            useful information. Such as an image associated to the word and an audio playback to help learn
            more about words in different languages.
        </p>
    </div>
    <div id="container2" style="border:double medium; width:240px; height:393px; float:left; margin-left:15px; padding-left:10px; padding-right:10px; ">
        <table>
            <tr>
                <td>
                    <p>Please select a word from the following list:</p>
                </td>
            </tr>
            <tr>
                <td align="center">
                    @Html.Partial("WordListView")
                </td>
            </tr>
            <tr>
                <td>
                    <p>Or enter a word to search for:</p>
                </td>
            </tr>
            <tr>
                <td align="center">
                    @using (Html.BeginForm())
                    {

                        @Html.TextBoxFor(w => w.Name)

                        <input type="submit" value="Show me the meaning" style="padding-top:5px;"/>
                        <p style="color:red; font-size:smaller;">@ViewBag.WordError</p>
                    }
                </td>
            </tr>

        </table>

        
        
    </div>
    <div id="container3" style="border:double medium; width:134px; height:393px; float:left; margin-left:15px; padding-left:10px; padding-right:10px;">
        <p><u>List of words previously searched</u></p>
        <p>Log in to access a listing of words you have already looked up.</p>
        
    </div>

</div>
