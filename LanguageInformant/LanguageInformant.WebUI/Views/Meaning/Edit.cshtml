@model LanguageInformant.Domain.Entities.Meaning

@{
    ViewBag.Title = "Edit Meaning";
}

<h2>Edit Meaning</h2>

@using (Html.BeginForm("EditMeaning", "Meaning", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.MeaningID)

        <div class="edit">
            <h4>Meaning Name: </h4>
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editMultiline">
                <h4>Definition: </h4>
            @Html.EditorFor(model => model.Description)    
            @Html.ValidationMessageFor(model => model.Description)
         </div>

        <div class="edit">
            <h4>Image: </h4>
            <div class="editor-field">
                @if (Model.ImageData == null)
                {
                    @:None
                }
                else
                {
                    <img width="100" height="100" src="@Url.Action("GetPicture", "Meaning", new { Model.MeaningID })" />
                }
                <div>Upload new image: <input type="file" name="FileUpload1" /></div>
            </div>
            </div>
    </div>
                <input type="submit" value="Save" class="mgmtButton" />
            }

<div>
    @Html.ActionLink("Back to List", "List")
</div>
