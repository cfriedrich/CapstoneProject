<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")"></script>
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            // set up hover panels
            // although this can be done without JavaScript, we've attached these events
            // because it causes the hover to be triggered when the element is tapped on a touch device
            $('.hover').hover(function () {
                $(this).addClass('flip');
            }, function () {
                $(this).removeClass('flip');
            });
        });
    </script>

</head>
<body style="background-color:ThreeDDarkShadow; width:1000px;">
    <div id="headingContainer" style="width:100%; height:100px;">
    <div id="headingBanner" style="width:765px; height:100px; border:dotted medium; float:left;">
        <img src="~/Content/Images/bannerfans_11101131.jpg" alt="LanguageInformantBanner" style="width:inherit; height:inherit;" />
    </div>
    <div id="logoBox" style="width:150px; height:100px; margin-left:10px; border:dotted medium; float:left;">
        <img src="~/Content/Images/Logo.png" alt="LanguageInformantLogo" style="width:inherit; height:inherit;" />
    </div>
    </div>
    <div id="breadcrumbNav" style="width:600px; height:30px; margin-top:10px; margin-left:165px; border:dotted medium;">
        <p>@Html.MvcSiteMap().SiteMapPath()</p>
    </div>
    <div id="userCourseBox" style="width:150px; height:400px; margin-top:50px; border:dotted medium; float:left;">

            @Html.Partial("_LoginPartial")
            <br />
                @Html.ActionLink("Help", "About", "Home")
            <br /><br />
            <p>Is this not you? <br />
               click <a href="javascript:document.getElementById('logoutForm').submit()">HERE</a> to log out.
            </p>

            <u>Lessons user has access to:</u>
            <ul>
                <li>Comprehension</li>
                <li>Matching</li>
            </ul>
    </div>

    <div id="contentBox" style="width:745px; height:500px; margin-top:5px; margin-left:10px; border:dashed medium; float:left; padding:10px;">
        @Html.MvcSiteMap().SiteMapPath()
        @RenderBody()
    </div>
    
    <div id="footer" style="width:910px; height:50px; margin-top:10px; margin-left:20px; border:dotted medium; float:left; ">
        <p style="text-align:center">&copy The Language Informant Team, 2014</p>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>