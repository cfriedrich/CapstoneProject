<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")"></script>
    <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            // set up hover panels
            // although this can be done without JavaScript, we've attached these events
            // because it causes the hover to be triggered when the element is tapped on a touch device
            $('.hover').hover(function () {
                $(this).addClass('flip');
            }, function () {
                $(this).removeClass('flip');
            });
        });
    </script>

</head>
<body style="background-color:ThreeDDarkShadow;">
    <div id="headingContainer" style="width:100%; height:100px;">
    <div id="headingBanner" style="width:765px; height:100px; border:dotted medium; float:left;">
        <img src="~/Content/Images/bannerfans_11101131.jpg" alt="LanguageInformantBanner" style="width:inherit; height:inherit;" />
    </div>
    <div id="logoBox" style="width:150px; height:130px; margin-left:10px; border:dotted medium; float:left;">
        <img src="~/Content/Images/Logo.png" alt="LanguageInformantLogo" style="width:inherit; height:inherit;" />
    </div>
    </div>

    <div id="breadcrumbNav" style="width:600px; height:20px; margin-top:10px; margin-left:165px; border:dotted medium;">
    
    </div>
    <div id="userCourseBox" style="width:150px; height:400px; margin-top:50px; border:dotted medium; float:left;">

    </div>

    <div id="contentBox" style="width:600px; height:500px; margin-top:5px; margin-left:10px; border:dashed medium; float:left;">
        @RenderBody()
    </div>
    
    <div id="imageBox" style="width:150px; height:400px; margin-top:50px; margin-left:10px; border:dotted medium; float:left;">

    </div>
    
    <div id="footer" style="width:900px; height:50px; margin-top:10px; margin-left:20px; border:dotted medium; float:left; ">

    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>