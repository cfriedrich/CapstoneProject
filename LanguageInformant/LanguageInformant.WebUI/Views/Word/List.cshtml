@model IEnumerable<LanguageInformant.Domain.Entities.Word>
@using LanguageInformant.Domain.Entities

@{
    ViewBag.Title = "Word List";
}

<h2>Word List</h2>

<table class="table">
    <tr class="alternate">
        <th width="20%">
            Word Spelling
        </th>
        <th width="40%">
            Description
        </th>
        <th width="10%">
            Sound
        </th>
        <th colspan="4">
            <div class="mgmtButton">
                @Html.ActionLink("Create New", "Create")
            </div>
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr class="details">
            <td class="alternate" style="padding-left:10px;">
                @item.Name
            </td>
            <td>
                @item.Description
            </td>
            <td>
                <audio class="player" controls src="@Url.Action("GetSound", new { item.WordID })" />
            </td>
            <td>
                <div class="mgmtButton">
                    @Html.ActionLink("Edit", "Edit", new { item.WordID })
                </div>
            </td>
            <td>
                <div class="mgmtButton">
                    @Html.ActionLink("Meanings", "EditMeanings", new { item.WordID})
                </div>
            </td>
            <td>
                <div class="mgmtButton">
                    @Html.ActionLink("Details", "Details", new { item.WordID })
                </div>
            </td>
            <td>
                <div class="mgmtButton">
                    @Html.ActionLink("Delete", "Delete", new { item.WordID })
                </div>
            </td>
        </tr>
    }

</table>


